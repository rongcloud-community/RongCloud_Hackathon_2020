<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_selected_gift"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_selected_gift"
        android:layout_width="224.5dp"
        android:layout_height="174.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal"
        android:layout_above="@id/iv_selected_gift"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_selected_gift_name"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/iv_selected_gift"
            android:text="发送者"
            android:textSize="18sp"
            android:textColor="#50E3C2"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_selected_gift_title"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_above="@id/iv_selected_gift"
            android:layout_height="wrap_content"
            android:text="@string/app"
            android:textColor="#F8E71C"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>