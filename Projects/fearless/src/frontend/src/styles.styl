/* You can add global styles to this file, and also import other style files */
body
    font-size 0.8vw
    @media screen and (max-width 1500px)
        font-size 14px
.example-spacer
    flex 1 1 auto
.content, .footer
    padding 1em
.footer
    position fixed
    bottom 0
    width calc(100% - 3em)
    text-align center

.mat-card-header
    .mat-card-title
        margin-top 12px

.mat-card-content
    padding 4px 16px 0

.mat-card-actions
    text-align right
    padding 0 16px!important

.mat-table
    width 100%

.mat-form-field
    width 100%

.mat-toolbar-single-row, .mat-menu-content, .mat-table
    a
        color inherit
        text-decoration none

.mat-grid-tile
    .mat-grid-tile-header
        width 100%
        position relative!important
    .mat-figure 
        justify-content flex-start!important
        align-items baseline!important
        flex-direction column

.mat-list-base
    width 100%

.messageForm
    width 100%
    .mat-form-field-infix
        display flex
        flex-direction row

.conversationList
    width 100%
    height calc(100% - 12em)
    overflow auto
    .mat-card
        margin 1em
        .mat-card-content
            padding 0
            img
                max-width: 100%
    .mat-card-title
        display inline-block
        margin-right 1em
    .mat-card-subtitle
        display inline-block
    .mat-card-avatar
        overflow hidden

.clickable
    cursor pointer

.chat-window
    height 100%
    display flex
    justify-content space-around
    .header
        font-size 1em
        background #ccc
        color #ffffff
        font-weight bold
        padding 1em 
    .convList
        flex-basis 20%
        @media screen and (max-width 1500px)
            flex-basis: 100%
    .convCur
        flex-basis 77%
        @media screen and (max-width 1500px)
            flex-basis: 100%
        .back
            display none
            @media screen and (max-width 1500px)
                display inline-block
    .mat-list-container
        width 100%
        height calc(100% - 5em)
        overflow auto
        .mat-list-item
            padding 1em 0!important
        .timeline
            margin-left auto
            margin-right 0
        .convPre
            overflow hidden
            text-overflow ellipsis
            max-width 100%
            max-height 3em
            padding 0 1em

.content
    height calc(100% - 10em)

.mat-app-background
    height calc(100vh - 16px)